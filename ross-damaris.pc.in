prefix = @CMAKE_INSTALL_PREFIX@
damaris_path = @DAMARIS_DIR@
damaris_ldflags = @DAMARIS_LINKER_FLAGS@
argobots_lib = -L@ARGOBOTS_LIBRARY_DIRS@ -l@ARGOBOTS_LIBRARIES@
argobots_cflags = @ARGOBOTS_CFLAGS@

damaris_cflags=-I${damaris_path}/include
ross_damaris_libs=-lROSS_Damaris -lrdplugins

Name: ROSS-Damaris
Description: Rensselaer's Optimistic Simulation System - Damaris Integration
Version: 1.0
URL: https://github.com/caitlinross/ROSS-damaris
Requires:
Libs: ${damaris_ldflags} ${argobots_lib} ${ross_damaris_libs} -Wl,-rpath -Wl,@ARGOBOTS_LIBRARY_DIRS@
Cflags: ${damaris_cflags} ${argobots_cflags}
