<?xml version="1.0"?>
<simulation name ="ROSS_opt_debug"
    language="c" xmlns="http://damaris.gforge.inria.fr/damaris/model">
    <architecture>
        <domains count="5000"/>
        <dedicated cores="1" nodes="0"/>
        <buffer name="buffer" size="67108864"/>
        <queue name="queue" size="100"/>
    </architecture>
    <visit>
        <path>/home/rossc3/visit/visit2.12.1/src</path>
        <!-- <options> -debug 5 -verbose </options> -->
        </visit>
    <data>
        <parameter name="num_lp" type="int" value="0" />
        <parameter name="total_lp" type="int" value="0" />
        <parameter name="num_pe" type="int" value="0" />
        <parameter name="num_kp" type="int" value="0" />
        <parameter name="num_rng" type="int" value="1" />

        <layout name="pe_id_layout" type="double" dimensions="2" /> 

        <layout name="dummy_layout" type="double" dimensions="2" />

        <layout name="lp_id_layout" type="double" dimensions="num_lp+1" /> 
        <layout name="lp_long_layout" type="long" dimensions="num_lp" />
        <layout name="lp_int_layout" type="int" dimensions="num_lp" />
        <layout name="lp_float_layout" type="float" dimensions="num_lp" />

        <layout name="kp_id_layout" type="double" dimensions="num_kp+1" /> 
        <layout name="kp_int_layout" type="int" dimensions="num_kp" />
        <layout name="kp_float_layout" type="float" dimensions="num_kp" />

        <layout name="types_str_layout" type="char" dimensions="2560" />
        <layout name="ev_str_layout" type="char" dimensions="128" />
        <layout name="lp_types_layout" type="int" dimensions="total_lp" />
        <layout name="rng_layout" type="long" dimensions="num_rng" />

        <mesh name="mesh2d_lp" type="rectilinear" topology="2">
            <coord name="ross/lp_id" unit="lp_id" label="LP ID" />
            <coord name="ross/pe_id" unit="pe_id" label="PE ID" />
        </mesh>

        <mesh name="mesh2d_kp" type="rectilinear" topology="2">
            <coord name="ross/kp_id" unit="kp_id" label="KP ID" />
            <coord name="ross/pe_id" unit="pe_id" label="PE ID" />
        </mesh>

        <mesh name="mesh2d_pe" type="rectilinear" topology="2">
            <coord name="ross/dummy" unit=" " label=" " />
            <coord name="ross/pe_id" unit="pe_id" label="PE ID" />
        </mesh>


        <variable name="nlp" layout="int" visualizable="false" time-varying="false" />
        <variable name="sync" layout="int" visualizable="false" time-varying="false" />
        <variable name="lp_types" layout="lp_types_layout" visualizable="false" time-varying="false" />
        <variable name="lp_types_str" layout="types_str_layout" visualizable="false" time-varying="false" />
        <variable name="num_types" layout="int" visualizable="false" time-varying="false" />
        <variable name="num_rngs" layout="int" visualizable="false" time-varying="false" />
        <variable name="rng_check" layout="int" visualizable="false" time-varying="false" />

        <variable name="current_gvt" layout="float" visualizable="false" time-varying="true" />
        <group name="ross">
            <!---<variable name="gvt" layout="double" visualizable="false" time-varying="true" />
            <variable name="rt" layout="double" visualizable="false" time-varying="true" />-->
            <group name="fwd_event">
                <variable name="src_lp" layout="int" visualizable="false" time-varying="true" />
                <variable name="dest_lp" layout="int" visualizable="false" time-varying="true" />
                <variable name="send_ts" layout="float" visualizable="false" time-varying="true" />
                <variable name="recv_ts" layout="float" visualizable="false" time-varying="true" />
                <variable name="ev_name" layout="ev_str_layout" visualizable="false" time-varying="true" />
                <variable name="rng_count" layout="rng_layout" visualizable="false" time-varying="true" />
            </group>
            <group name="rev_event">
                <variable name="src_lp" layout="int" visualizable="false" time-varying="true" />
                <variable name="dest_lp" layout="int" visualizable="false" time-varying="true" />
                <variable name="send_ts" layout="float" visualizable="false" time-varying="true" />
                <variable name="recv_ts" layout="float" visualizable="false" time-varying="true" />
                <variable name="ev_name" layout="ev_str_layout" visualizable="false" time-varying="true" />
                <variable name="rng_count" layout="rng_layout" visualizable="false" time-varying="true" />
            </group>
            <group name="opt_event">
                <variable name="src_lp" layout="int" visualizable="false" time-varying="true" />
                <variable name="dest_lp" layout="int" visualizable="false" time-varying="true" />
                <variable name="send_ts" layout="float" visualizable="false" time-varying="true" />
                <variable name="recv_ts" layout="float" visualizable="false" time-varying="true" />
                <variable name="ev_name" layout="ev_str_layout" visualizable="false" time-varying="true" />
                <variable name="rng_count" layout="rng_layout" visualizable="false" time-varying="true" />
            </group>
            <group name="seq_event">
                <variable name="src_lp" layout="int" visualizable="false" time-varying="true" />
                <variable name="dest_lp" layout="int" visualizable="false" time-varying="true" />
                <variable name="send_ts" layout="float" visualizable="false" time-varying="true" />
                <variable name="recv_ts" layout="float" visualizable="false" time-varying="true" />
                <variable name="ev_name" layout="ev_str_layout" visualizable="false" time-varying="true" />
                <variable name="rng_count" layout="rng_layout" visualizable="false" time-varying="true" />
            </group>
            <group name="pes">
                <group name="gvt_inst">
                    <variable name="committed_events" layout="int" visualizable="true" time-varying="true" type="scalar" mesh="mesh2d_pe" centering="zonal" />
                </group>
            </group>

            <group name="lps">
                <group name="gvt_inst">
                    <variable name="committed_events" layout="lp_int_layout" visualizable="true" time-varying="true" type="scalar" mesh="mesh2d_lp" centering="zonal" />
                </group>
            </group>
        </group>
    </data>
    <actions>
        <event name="damaris_gc" action="damaris_gc" library="librdplugins.so" scope="group"/>
        <event name="opt_debug" action="opt_debug_comparison" library="librdplugins.so" scope="group"/>
        <event name="rng_check_setup" action="rng_check_setup" library="librdplugins.so" scope="group"/>
        <event name="rng_check_event" action="rng_check_event" library="librdplugins.so" scope="group"/>
        <event name="opt_debug_setup" action="opt_debug_setup" library="librdplugins.so" scope="core"/>
        <event name="opt_debug_finalize" action="opt_debug_finalize" library="librdplugins.so" scope="group"/>
        <!-- <error event="damaris_gc"/> -->
        <!--<event name="test" action="aggregate_data" library="libROSS_Damaris.so" scope="group" />-->
    </actions>
    <!-- <log FileName="log/error" RotationSize="5" LogFormat="[%TimeStamp%]: %Message%" LogLevel="info"/> -->
</simulation>

